{
  "extends": "./tsconfig.json",
  "compilerOptions": {
  "outDir": "../../dist/apps/backend",
  "rootDir": "src",
  "baseUrl": "src",
  "paths": {
    "@app/*": ["*"],
    "@configs/*": ["configs/*"],
    "@common/*": ["common/*"],
    "@database/*": ["database/*"],
    "@modules/*": ["modules/*"]
  },
  "module": "commonjs",
  "target": "es2016",
  "types": ["node"],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "noEmitHelpers": false,
  "noImplicitAny": true,  
  "strict": true,
  "sourceMap": false
},
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}